<!-- INICIO DEL CÓDIGO ADAPTADO AL NUEVO CSS -->
<div class="container mt-5 d-flex justify-content-center">
  <!-- Envolvemos el formulario en una tarjeta con sombra -->
  <div class="card shadow-lg admin-card-width p-4">
    <form id="formulario" method="post" action="../EditarMedico/{{med.correo}}">
      <!-- Título -->
      <h2 class="text-center mb-4" style="color: var(--primary-blue);">
        Editar Medico
      </h2>

      <div class="form-group mb-3">
        <label for="Correo">Correo</label>
        <input class="form-control" value = {{med.correo}} type="email" name="Correo" id="Correo" placeholder="Ingrese el correo" 
          autofocus required />
      </div>

      <div class="form-group mb-3">
        <label for="Nombre">Nombre</label>
        <input class="form-control" value = {{med.nombre}} type="text" name="Nombre" id="Nombre"
          placeholder="Ingrese el nombre del paciente" required />
      </div>

      <div class="form-group mb-3">
        <label for="Apellido_P">Apellido Paterno</label>
        <input class="form-control" value = {{med.apellido_p}} type="text" name="Apellido_P" id="Apellido_P"
          placeholder="Ingrese el apellido paterno" required />
      </div>

      <div class="form-group mb-3">
        <label for="Apellido_M">Apellido Materno</label>
        <input class="form-control" value = {{med.apellido_m}} type="text" name="Apellido_M" id="Apellido_M"
          placeholder="Ingrese el apellido materno" required />
      </div>

      <div class="mt-4">
        <button type="submit" class="btn btn-crear w-100">
         Editar Medico
        </button>
      </div>

      <div id="alerta" class="mt-3"></div> <!-- Alerta corregida -->
    </form>
  </div>
</div>


