            <h3 class="m-0">Detalles del Pago Completo</h3>
        </div>
        <div class="card-body">
            <!-- FOLIO -->
            <div class="form-group mb-3">
                <label for="folio">Folio:</label>
                <input type="text" id="folio" class="form-control" value="{{folio}}" readonly />
            </div>

            <!-- MONTO TOTAL -->
            <div class="form-group mb-3">
                <label for="monto_total">Monto Total (Cantidad a depositar al médico):</label>
                <input type="number" id="monto_total" class="form-control" value="{{monto_total}}" readonly />
            </div>

            <!-- BOTÓN REGRESAR -->
            
        </div>
    </div>
</div>
