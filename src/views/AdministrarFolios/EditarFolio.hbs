<!-- INICIO DEL CÓDIGO ADAPTADO AL NUEVO CSS -->
<div class="container mt-5 d-flex justify-content-center">
  <!-- Envolvemos el formulario en una tarjeta con sombra -->
  <div class="card shadow-lg admin-card-width p-4">
    <form id="formulario" method="post" action="../EditarFolio/{{datos.folio}}">
      <!-- Título -->
      <h2 class="text-center mb-4" style="color: var(--primary-blue);">
        Editar Folio
      </h2>

      <div class="form-group mb-3">
        <label for="Paciente">Paciente</label>
        <input class="form-control" value = {{datos.paciente}} type="text" name="Paciente" id="Paciente" placeholder="Ingrese el nombre del paciente" 
          autofocus required />
      </div>
    <!-- Médico -->
      <div class="form-group mb-3">
        <label for="Medico">Médico</label>
        <select id="Medico" value= {{datos.medico}} name="Medico" class="form-control">
          {{#each Medicos}}
          <option value="{{correo}}">
            {{nombre}} {{apellido_p}} {{apellido_m}}
          </option>
          {{/each}}
        </select>
      </div>

      <div class="form-group mb-3">
        <label for="Habitacion">Habitación</label>
        <input class="form-control" value = {{datos.habitacion}} type="text" name="Habitacion" id="Habitacion"
          placeholder="Ingrese la habitacion" required />
      </div>

    {{#if (eq datos.tipo_folio "Particulares")}}

      <div class="form-group mb-3">
        <label for="Habitacion">Monto total</label>
        <input class="form-control" value = {{datos.monto_total}} type="text" name="Monto" id="Monto"
          placeholder="Ingrese el monto total" required />
      </div>
      
    {{/if}}

      <div class="mt-4">
        <button type="submit" class="btn btn-crear w-100">
         Editar Folio
        </button>
      </div>
    

      <div id="alerta" class="mt-3"></div> <!-- Alerta corregida -->
    </form>
  </div>
</div>
