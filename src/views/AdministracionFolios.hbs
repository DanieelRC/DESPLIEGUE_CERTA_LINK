<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header text-white text-center">
      <h1 class="m-0">Panel principal</h1>
    </div>
    <div class="card-body mt-4">
      <!-- Tabla para organizar los botones -->
      <div class="table-responsive">
        <table class="table table-borderless text-center align-middle"
          style="table-layout: fixed; width: 100%; height: 400px;">
          <tbody>
            <!-- Primera fila: 3 celdas -->
            <tr style="height: 33.33%;">
              <td>
                <button type="button"
                  class="btn btn-crear btn-lg w-100 h-100 d-flex justify-content-center align-items-center text-truncate"
                  data-bs-toggle="modal" data-bs-target="#exampleModal">
                  Crear
                </button>
              </td>
              <td>
                <a href="./Cobros/Principal"
                  class="btn btn-cobros btn-lg w-100 h-100 d-flex justify-content-center align-items-center text-truncate">
                  Cobros
                </a>
              </td>
              <td>
                <a href="./Seguros/Principal"
                  class="btn btn-consultas btn-lg w-100 h-100 d-flex justify-content-center align-items-center text-truncate">
                  Gestión de Seguros
                </a>
              </td>
            </tr>
            {{#if (eq acceso "Administrador")}}
            <!-- Segunda fila: 2 botones centrados en un contenedor flex que ocupa el 100% -->
            <tr style="height: 33.33%;">
              <td colspan="3">
                <div class="d-flex justify-content-around align-items-center h-100">
                  <a href="./Pagos/Principal"
                    class="btn btn-pagos btn-lg w-100 mx-2 d-flex justify-content-center align-items-center"
                    style="height: 100%;">
                    Pagos
                  </a>
                  <a href="./AdministrarFolios/Principal" class="btn btn-folios btn-lg w-100 mx-2 d-flex justify-content-center align-items-center"
                    style="height: 100%;">
                    Administrar folios
                  </a>
                </div>
              </td>
            </tr>
            <!-- Tercera fila: 2 botones centrados en un contenedor flex que ocupa el 100% -->
            <tr style="height: 33.33%;">
              <td colspan="3">
                <div class="d-flex justify-content-around align-items-center h-100">
                  <a href="./Folio/ConsultasEspecificas"
                    class="btn btn-consultas btn-lg w-100 mx-2 d-flex justify-content-center align-items-center"
                    style="height: 100%;">
                    Consultas específicas
                  </a>
                  <a href="/PaginaPrincipal"
                    class="btn btn-principal btn-lg w-100 mx-2 d-flex justify-content-center align-items-center"
                    style="height: 100%;">
                    Regresar a la página principal
                  </a>
                </div>
              </td>
            </tr>
            {{/if}}
          </tbody>
        </table>
        <div class="mt-4">
          <a href="/cerrarSesion" class="btn btn-danger btn-lg w-100">Cerrar Sesión</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content shadow-lg">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title text-white" id="exampleModalLabel">Crear</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <form method="get" action="./Folio/CrearFolio">
          <input type="hidden" name="tipoFolio" id="tipoFolio" />
          <div class="d-flex flex-column gap-3">
            <button type="button" class="btn btn-success btn-lg" onclick="enviarFolio('Particulares')">
              Particulares
            </button>
            <button type="button" class="btn btn-warning btn-lg" onclick="enviarFolio('Seguros')">
              Seguros
            </button>
          </div>
        </form>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal">
          Cancelar
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  function enviarFolio(tipo) {
    document.getElementById("tipoFolio").value = tipo;
    document.getElementById("tipoFolio").form.submit();
  }
</script>

<!-- Bootstrap JS (versión 5.x) - Incluye Popper (bundle) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>